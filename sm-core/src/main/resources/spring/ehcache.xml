<?xml version="1.0" encoding="UTF-8"?>
<ehcache name="com.shopizer.core.cache" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd">
	
    <defaultCache
            maxElementsInMemory="100"
            eternal="false"
            timeToIdleSeconds="120"
            timeToLiveSeconds="120"
            overflowToDisk="false"
            diskSpoolBufferSizeMB="30"
            maxElementsOnDisk="10000000"
            diskPersistent="false"
            diskExpiryThreadIntervalSeconds="120"
            memoryStoreEvictionPolicy="LRU" />
            
            
     <cache name="com.shopizer.OBJECT_CACHE"
           maxElementsInMemory="100"
           eternal="false"
           overflowToDisk="false"
           timeToIdleSeconds="120"
           timeToLiveSeconds="120"
           memoryStoreEvictionPolicy="LFU" />
           
     <cache name="store" maxElementsInMemory="1000" eternal="false"
    	overflowToDisk="false" memoryStoreEvictionPolicy="LFU" />
    	
     <cache name="countriesMap" maxElementsInMemory="500" eternal="false"
    	overflowToDisk="false" memoryStoreEvictionPolicy="LFU" />
    	           
     <cache name="countrByCode" maxElementsInMemory="300" eternal="false"
    	overflowToDisk="false" memoryStoreEvictionPolicy="LFU" />
    	
     <cache name="zoneByCode" maxElementsInMemory="800" eternal="false"
    	overflowToDisk="false" memoryStoreEvictionPolicy="LFU" />
    	
     <cache name="languageByCode" maxElementsInMemory="50" eternal="false"
    	overflowToDisk="false" memoryStoreEvictionPolicy="LFU" />
    	
    <cache name="userMenuCode" maxElementsInMemory="300" eternal="false"
    	overflowToDisk="false" memoryStoreEvictionPolicy="LFU" />	
    	
    <cache name="adminMenuCode" maxElementsInMemory="100" eternal="false"
    	overflowToDisk="false" memoryStoreEvictionPolicy="LFU" />

<!--    <cache name="productListCache" maxElementsInMemory="100" eternal="false"-->
<!--           overflowToDisk="false" memoryStoreEvictionPolicy="LFU" />-->

    <cache name="productByIdCache" maxElementsInMemory="100" eternal="false"
           overflowToDisk="false" memoryStoreEvictionPolicy="LCU" />
    
</ehcache>